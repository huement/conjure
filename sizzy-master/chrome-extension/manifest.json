{
  "name": "Sizzy",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "A tool for developing responsive websites crazy-fast",
  "homepage_url": "https://sizzy.co",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "permissions": [ "activeTab", "webRequest", "webRequestBlocking", "<all_urls>" ],
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Open in sizzy"
  }
}