#
# LOCALHOST [LAPTOP/DEV BOX]
#
local:
  vhost: "{{ home_url }}"
  wordpress_path: "{{ wordpress_path }}" # use an absolute path here

  database:
    name: "{{ db_name }}"
    user: "{{ db_user }}"
    password: "{{ db_pass }}"
    host: "{{ db_host }}"
    charset: "{{ db_charset }}"

  # Using a modern wp stack? optionally set path(s): 
  # Customize wordpress internal paths (Bedrock, etc)
  #   wp_content: "wp-content"
  #   uploads: "wp-content/uploads"
  #   plugins: "wp-content/plugins"
  #   mu_plugins: "wp-content/mu-plugins"
  #   themes: "wp-content/themes"
  #   languages: "wp-content/languages"

#
# STAGING [REMOTE SERVER]
#
staging:
  vhost: "{{ stage_url }}"
  wordpress_path: "{{ stage_path }}" # use an absolute path here

  database:
    name: "{{ db_name }}"
    user: "{{ db_user }}"
    password: "{{ db_pass }}"
    host: "{{ db_host }}"
    charset: "{{ db_charset }}"
    mysqldump_options: "--max_allowed_packet=50MB" # Only available if using SSH
    
  exclude:
    - ".git/"
    - ".gitignore"
    - ".sass-cache/"
    - "bin/"
    - "tmp/*"
    - "Gemfile*"
    - "Movefile"
    - "wp-config.php"
    - "wp-content/*.sql"

  # SSH Credentials for Production Server!
  ssh:
    host: "{{ ssh_url }}"
    user: "{{ ssh_user }}"
    port: {{ ssh_port }}
    rsync_options: --verbose
   
#
# PRODUCTION [REMOTE SERVER]
# 
production:
  vhost: "{{ prod_url }}"
  wordpress_path: "{{ prod_path}}" # use an absolute path here

  database:
    name: "{{ db_name }}"
    user: "{{ db_user }}"
    password: "{{ db_pass }}"
    host: "{{ db_host }}"
    charset: "{{ db_charset }}"
    mysqldump_options: "--max_allowed_packet=50MB" # Only available if using SSH

  exclude:
    - ".git/"
    - ".gitignore"
    - ".sass-cache/"
    - "bin/"
    - "tmp/*"
    - "Gemfile*"
    - "Movefile"
    - "wp-config.php"
    - "wp-content/*.sql"

  # SSH Credentials for Production Server!
  ssh:
    host: "{{ ssh_url }}"
    user: "{{ ssh_user }}"
    port: {{ ssh_port }}
    rsync_options: --verbose